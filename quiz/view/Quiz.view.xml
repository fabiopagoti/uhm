<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" controllerName="quiz.view.Quiz">
	<SplitApp>
		<masterPages>
			<List headerText="Quiz">
				<items>
					<ObjectListItem title="Pergunta" type="Active"
						press=".onQuestionPress" number="1" numberUnit="Pergunta">

					</ObjectListItem>
				</items>
			</List>
		</masterPages>
		<detailPages>
			<Page>


				<l:Grid id="detailFragment"  width="auto">
					<l:content>
						<f:SimpleForm minWidth="1024" 
							editable="false" layout="ResponsiveGridLayout" title="teste"
							>
						


								<Text text="qual é a ultima versão do UI5 ?" />

								<VBox>
									<RadioButton groupName="GroupA" text="Option 1"
										selected="true" />
									<RadioButton groupName="GroupA" text="Option 2" />
									<RadioButton groupName="GroupA" text="Option 3" />
									<RadioButton groupName="GroupA" text="Option 4" />
									<RadioButton groupName="GroupA" text="Option 5" />
								</VBox>

						
							
						</f:SimpleForm>
					</l:content>
				</l:Grid>

			</Page>
		</detailPages>
	</SplitApp>
</mvc:View>