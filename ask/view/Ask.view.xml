<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View 
	controllerName="ask.view.Ask" 
	xmlns="sap.m" 
	xmlns:c="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc">
	<App>
		<Page title="Ask a question">
			<FlexBox direction="Column" alignItems="Stretch" fitContainer="true">
				<items>
					<Label text="{i18n>topic}"/>
					<ComboBox 
						id="topic"
						items="{topics>/}">
						<c:Item key="{topics>}" text="{topics>}" />
					</ComboBox>

					<Label text="{i18n>question}" />
					<Input id="question"/>

					<Label text="{i18n>questionType}"/>
					<ComboBox 
						id="questionType" 
						items="{
						path: 'questionType>/'
						}"
						selectionChange=".onChangeQuestionType">
						
							<c:Item key="{questionType>key}" text="{questionType>text}"/>
						
					</ComboBox>

					<VBox
						id="answersContainer"
						items="{
							path: 'options>/'
						}">
						
							<Input placeholder="{options>placeholder}" change=".onChangeAnswer" />
						
					</VBox>

					<Button id="butAsk" text="{i18n>ask}" press=".onPressAskQuestion" />

				</items>
			</FlexBox>
		</Page>
	</App>
</mvc:View>